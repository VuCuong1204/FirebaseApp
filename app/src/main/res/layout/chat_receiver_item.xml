<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHomeChatReceiverAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHomeHomeChatReceiverReceiverAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvChatReceiverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="6sp"
        app:layout_constraintBottom_toTopOf="@id/tvHomeChatReceiverContent"
        app:layout_constraintStart_toStartOf="@id/tvHomeChatReceiverContent"
        app:layout_constraintTop_toTopOf="@id/cvHomeChatReceiverAvatar"
        tools:text="abycgsadff" />

    <TextView
        android:id="@+id/tvHomeChatReceiverContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape_bg_gray_corner_12"
        android:maxWidth="240dp"
        android:padding="6dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvHomeChatReceiverAvatar"
        app:layout_constraintTop_toTopOf="@id/cvHomeChatReceiverAvatar"
        tools:text="hello Vũ Quốc Cường" />

</androidx.constraintlayout.widget.ConstraintLayout>
